<%- layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Frame</h1>
    <form action="/frames/<%= frame._id %>?_method=PUT" method="POST">
        <div class="col-6 offset-3">
            <form action="/frames" method="POST">
                <div class="mb-3">
                    <label for="title"  class="form-label">Title</label>
                    <input type="text" class="form-control" placeholder="enter title" id="title" name="frame[title]" value="<%= frame.title %>">
                </div>
    
                <div class="mb-3">
                    <label for="description"  class="form-label">Description</label>
                    <textarea type="text" class="form-control" placeholder="enter description" id="description" name="frame[description]"><%= frame.description %></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="words"  class="form-label">Words</label>
                    <input type="text" class="form-control" placeholder="enter words" id="words" name="frame[words]" value="<%= frame.words %>">
                </div>            
                <div class="mb-3">
                    <button class="btn btn-success">Update Frame</button>
                </div>
            </form>
            <a class="btn btn-info" href="/frames">Back to All Frames</a>
        </div>
    </form>
</div>

