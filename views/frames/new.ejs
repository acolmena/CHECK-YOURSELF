<%- layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add Frames</h1>
    <div class="col-6 offset-3">
        <div class="accordion mb-3" id="accordionExample">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button" id="accHeader1" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  +
                </button>
              </h2>
              <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                <div class="accordion-body mb-3">
                    <form action="/frames" class="needs-validation" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="title"  class="form-label">Title</label>
                            <input type="text" class="form-control" placeholder="enter title" id="title" name="frame[title]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a title/name for the frame!
                            </div>
                        </div>
            
                        <div class="mb-3">
                            <label for="description"  class="form-label">Description</label>
                            <textarea type="text"  class="form-control" placeholder="enter description (optional)" id="description" name="frame[description]"></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="words"  class="form-label">Words</label>
                            <input type="text"  class="form-control" placeholder="enter words" id="words" name="frame[words]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter word(s) associated with frame so we can scan for them!
                            </div>
                        </div>            
                        <div class="mb-3">
                            <button class="btn btn-outline-success">Add Next Frame</button>
                        </div>
                    </form>
              </div>
            </div>
        </div>
        <button class="btn btn-info mb-3" id="nextFrameBtn" onclick="makeNewAccordionWForm()">Add Next Frame</button>
        <button class="btn btn-outline-success mb-3" id="finishAndReviewBtn" onclick="submitAllForms()">Finish and Review</button>
        <!-- <a class="btn btn-info mb-3" href="/frames" id="finishAndReview">Finish and Review</a> -->
    </div>
</div>
