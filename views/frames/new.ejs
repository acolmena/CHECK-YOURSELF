<%- layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Frame</h1>
    <div class="col-6 offset-3">
        <form action="/frames" method="POST">
            <div class="mb-3">
                <label for="title"  class="form-label">Title</label>
                <input type="text" class="form-control" placeholder="enter title" id="title" name="frame[title]">
            </div>

            <div class="mb-3">
                <label for="description"  class="form-label">Description</label>
                <textarea type="text" class="form-control" placeholder="enter description" id="description" name="frame[description]"></textarea>
            </div>
            
            <div class="mb-3">
                <label for="words"  class="form-label">Words</label>
                <input type="text" class="form-control" placeholder="enter words" id="words" name="frame[words]">
            </div>            
            <div class="mb-3">
                <button class="btn btn-success">Add Frame</button>
            </div>
        </form>
        <a class="btn btn-info" href="/frames">Back to All Frames</a>
    </div>
</div>