    <div class="col-3 offset-9">
        <div class="mb-3" id="exportBtns">
            <a href="" class="btn btn-warning" id="exportResultsBtn" style="background-color: #ffe69b;">Export Results</a>
            <a href="" class="btn btn-warning" id="exportFramesBtn" style="background-color: #ffe69b;">Export Frames</a>
        </div>
    </div>
    <div class="col-8 offset-2">
