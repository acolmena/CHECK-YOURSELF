<%- layout('layouts/boilerplate') %>
<div class="row">
    <!-- <h1 class="text-center">Scan</h1> -->
    <div class="col-6 offset-3">
        <%- include('../partials/howToUseScan') %>
        <div>
            <p id="outputText" class="rounded-text-box" style="display: none; background-color: #dce0e6;
            border-radius: 20px; padding: 20px; margin-bottom: 40px;">Â </p>
            
            <div id="chartPar0" style="width: 650px; margin-bottom: 50px">
                <canvas id="myChart0" aria-label="pie chart for scan" role="pie chart">
                    <p>Pie chart breaking down instances of frames found</p>
                </canvas> 
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            </div>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto">
            <button id="newScanBtn" class="btn btn-primary" style="display: none; margin-bottom: 40px;">Scan Again</button>
        </div>
        <form class="mb-3" id="inputForm">
            <div class="mb-3">
                <textarea class="form-control" id="inputText" spellcheck="true" style="height: 350px" placeholder="Enter your article here!"></textarea>
            </div>
            <p>&nbsp;</p>
            <!-- <p><input id="scanArticle" class="btn btn-success btn-large mx-auto" type="button" value="Scan Article" /></p> -->
            <div class="d-grid gap-2 col-4 mx-auto">
                <button class="btn btn-success btn-lg" type="button" id="scanArticleBtn" >SCAN ARTICLE</button>  
              </div>
            <br />
            <!-- <div class="card text-center d-grid gap-2 col-6 mx-auto" id="clrBlnd">
