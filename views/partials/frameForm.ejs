<div class="row">
    <div class="col-4 offset-2">
            <div class="card card-body mb-3 rounded-4 rounded border-secondary">
                <form action="/frames" class="needs-validation p-2" method="POST" novalidate>
                    <h5 class="text-secondary-emphasis mb-1">Make New Frames</h5>
                    <p class="required mb-1"><strong>*</strong> Indicates required field</p>
                    <div class="mb-4">
                        <label for="title"  class="text-secondary-emphasis form-label fw-semibold">Title <strong class="star">*</strong></label>
                        <input type="text" class="form-control border-secondary rounded " placeholder="enter title" id="title" name="frame[title]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a title/name for the frame!
                        </div>
                    </div>
        
                    <div class="mb-4">
                        <label for="description"  class="text-secondary-emphasis form-label fw-semibold">Description</label>
                        <textarea type="text" class="form-control border-secondary rounded " placeholder="enter description (optional)" id="description" name="frame[description]"></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="words"  class="text-secondary-emphasis form-label fw-semibold">Words/Phrases (separate with commas) <strong class="star">*</strong></label>
                        <textarea type="text" class="form-control border-secondary rounded " placeholder="enter words in this format: word, nextWord, phrase one, phrase two" id="words" name="frame[words]" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter word(s) associated with frame so we can scan for them!
                        </div>
                    </div>    
                    <div class="mb-4">
                        <label for="color"  class="text-secondary-emphasis form-label fw-semibold">Color <strong class="star">*</strong></label>                        
                        </br>
                        <input class="border-secondary p-0 " type="color"  value="#b3e2ff" id="color" name="frame[color]" required>
                        <small>Pro tip*: avoid picking the color white</small>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please pick a color for this frame!
                        </div>
                    </div>        
                    <div class="mb-3">
                        <button class="btn rounded-pill text-dark border-secondary fw-semibold" title="Click to make a new frame!">add frame</button>                       
                    </div>
                </form>
             </div>
    </div>
    <div class="col-4">
        <div class="card card-body mb-3 rounded-4 rounded border-secondary" >
            <form action="/frames" id="reloadFramesForm" class="needs-validation p-2" method="POST" novalidate> 
                <h5 class="mb-1 text-secondary-emphasis">Reload Frames</h5>
                <p class="required mb-1"><strong>*</strong> Indicates required field</p>
                <div class="mb-3">
                    <label for="reloadedFrames"  class="form-label text-secondary-emphasis fw-semibold">Content Of Previously Exported Frames File <strong class="star">*</strong></label>
                    <textarea type="text" class="form-control rounded border-secondary" placeholder="enter previous frames" id="reloadedFrames" name="reloadedFrames" required></textarea>
                    <div class="invalid-feedback">
                        Please paste the contents of the <strong>.json</strong>  file you exported from this website
                    </div>
                </div>
                <div class="mb-3 mt-4">
                    <button class="btn rounded-pill text-dark border-secondary fw-semibold" title="Click to reload previous frames!">add frame(s)</button>                       
                </div>
            </form>
        </div>
    </div>
 </div>



 